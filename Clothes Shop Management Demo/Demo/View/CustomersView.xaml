<Page x:Class="Demo.View.CustomersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="605" d:DesignWidth="700"
      >

    <Border
        Height="605"
        Width="700"
        Background="Transparent"
        CornerRadius="20"
        BorderThickness="5"
        
        >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontWeight="SemiBold"
                        FontFamily="{StaticResource Custom}"
                        FontSize="30"
                        Foreground="#6C63FF"
                        Margin="15,10,0,0" Width="650"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                    ><Run Text="KHÁCH HÀNG" />
                    </TextBlock>
                </StackPanel>

            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <Border
                        Margin="15,0,0,0"
                        Height="40"
                        Width="115"
                        CornerRadius="15"
                        Background="#6C63FF"
                        >                        
                        <ComboBox
                            x:Name="cbxTimKiem"
                            Style="{StaticResource MaterialDesignFilledComboBox}"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="2,-11,-10,0"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="14"
                            materialDesign:HintAssist.Hint="Tìm kiếm"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            BorderThickness="0"
                            materialDesign:HintAssist.FontFamily="{StaticResource Custom}"
                            materialDesign:HintAssist.Foreground="White"
                            Background="White"
                            FontFamily="{StaticResource Custom}"
                            Height="35"
                            FontSize="14"
                            Width="110">

                        </ComboBox>
                    </Border>
                    <TextBox
                        x:Name="tbxSearch"
                        Width="430"
                        Height="40"
                        Margin="15,0,0,0"
                        BorderBrush="#6C63FF"
                        Foreground="Gray"
                        FontSize="18"
                        FontWeight="SemiBold"
                        materialDesign:HintAssist.Hint="Tìm Kiếm"
                        materialDesign:HintAssist.FontFamily="{StaticResource MaterialDesignFont}"
                        materialDesign:HintAssist.Foreground="White"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,4,0,0"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="15"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        BorderThickness="3"
                        VerticalAlignment="Center"
                        CaretBrush="White"
                        >
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Resource/Image/search_fill.png" 
                                        AlignmentX="Right" 
                                        Stretch="Uniform"
                                        ></ImageBrush>
                        </TextBox.Background>
                    </TextBox>
                    <Button
                        Margin="40,0,0,0"
                        Width="50"
                        Height="40"
                        materialDesign:ButtonAssist.CornerRadius="15"
                        Background="#6C63FF"
                        >
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resource/Image/add_fill.png" 
                                   Height="20"
                                   Margin="-1,0,0,2"/>

                        </StackPanel>
                    </Button>

                </StackPanel>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel>
                    <Border
                        Margin="10,5,10,0"
                        Width="670"
                        Height="50"
                        CornerRadius="10"
                        >
                      
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="190"/>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="MÃ KH"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{StaticResource Custom}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                               Margin="10,0,0,0"
                                           />

                                </StackPanel>


                            </Grid>
                            <Grid Grid.Column="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="TÊN KHÁCH HÀNG"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontFamily="{StaticResource Custom}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                               Margin="35,0,0,0"
                                           />

                                </StackPanel>

                            </Grid>
                            <Grid Grid.Column="2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="SỐ ĐIỆN THOẠI"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontFamily="{StaticResource Custom}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                               Margin="35,0,0,0"
                                           />

                                </StackPanel>

                            </Grid>
                            <Grid Grid.Column="3">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ĐỊA CHỈ"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{StaticResource Custom}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                               Margin="90,0,0,0" RenderTransformOrigin="0.986,0.782"
                                           />
                                </StackPanel>

                            </Grid>

                        </Grid>

                    </Border>
                    <ListView
                        x:Name="CustomersListView"
                        ItemsSource="{Binding}"
                        Height="400"
                        Width="670"
                        SelectionMode="Single"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                        >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Width="770"
                                    Height="400"
                                    CornerRadius="15"
                                    Margin="10,0,10,0"
                                    >
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFE5D8" Offset="1"/>
                                            <GradientStop Color="#FFCAD4" Offset="0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <TextBlock
                                                Text="{Binding}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource MaterialDesignFont}"
                                                FontSize="16"
                                                >
                                            </TextBlock>
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <TextBlock
                                                Text="{Binding}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource MaterialDesignFont}"
                                                FontSize="16"
                                                Margin="5,0,0,0"
                                                >
                                            </TextBlock>
                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <TextBlock
                                                Text="{Binding}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource MaterialDesignFont}"
                                                FontSize="16"
                                                Margin="5,0,0,0"
                                                >
                                            </TextBlock>
                                        </Grid>
                                        <Grid Grid.Column="3">
                                            <TextBlock
                                                Text="{Binding}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource MaterialDesignFont}"
                                                FontSize="16"
                                                Margin="5,0,0,0"
                                                >

                                            </TextBlock>
                                        </Grid>
                                    </Grid>

                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
            </Grid>
        </Grid>

    </Border>
</Page>