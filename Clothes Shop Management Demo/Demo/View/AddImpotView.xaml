<Page x:Class="Demo.View.AddImpotView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.View"
        mc:Ignorable="d"       
        Background="Transparent"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="AddImportView" 
        DataContext="{StaticResource AddImportVM}"
        x:Name="AddImportwd"
        Height="605" 
        Width="700" >
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <ThicknessAnimation Storyboard.TargetName="AddImportwd"
                                        Storyboard.TargetProperty="Margin"
                                        From="426,0,0,0"
                                        To="0"
                                        Duration="0:0:0.2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding Loadwd}"
                                   CommandParameter="{Binding ElementName=AddImportwd}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border
        x:Name="xx"
        CornerRadius="15"
        Background="Transparent"
        >
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <i:InvokeCommandAction Command="{Binding MoveWindow}"
                                       CommandParameter="{Binding ElementName=AddImportwd}"></i:InvokeCommandAction>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="200"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                >
                    <materialDesign:PackIcon Kind="WindowMinimize" Foreground="White" Height="24" Width="24" Margin="0,0,8,0">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding Minimizewd}"
                                                       CommandParameter="{Binding ElementName=AddImportwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </materialDesign:PackIcon>
                    <materialDesign:PackIcon Kind="CloseThick" Foreground="White" Height="24" Width="24">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding Closewd}"
                                                       CommandParameter="{Binding ElementName=AddImportwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </materialDesign:PackIcon>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock
                    Text="PHIẾU NHẬP HÀNG"
                    Foreground="#6C63FF"
                    FontFamily="{StaticResource Custom}"
                    FontSize="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    />
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border
                        Margin="20,0,20,0"
                        Background="White"
                        CornerRadius="15"
                        >
                        <StackPanel
                            Margin="10"
                            >
                            <TextBlock
                                Margin="0,10,0,5"
                                Text="THÔNG TIN PHIẾU NHẬP"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                                />
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                    Margin="8,0,0,0"
                                    Text="MÃ ND"
                                    FontFamily="{StaticResource Custom}"
                                    />
                                    <TextBlock
                                    Margin="4,0,0,0"
                                    Text="|"
                                    FontFamily="{StaticResource Custom}"
                                    />
                                    <TextBlock
                                    Margin="4,0,0,0"
                                    Text="TÊN ND"
                                    FontFamily="{StaticResource Custom}"
                                    />
                                </StackPanel>
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox
                                            x:Name="MaND" 
                                            HorizontalAlignment="Left"
                                            FontFamily="{StaticResource Custom}"
                                            BorderThickness="0"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                            IsEnabled="False"
                                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                        <TextBox
                                            Text="|"
                                            HorizontalAlignment="Left"
                                            FontFamily="{StaticResource Custom}"
                                            BorderThickness="0"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                            IsEnabled="False"
                                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                        <TextBox
                                            x:Name="TenND"
                                            HorizontalAlignment="Left"
                                            FontFamily="{StaticResource Custom}"
                                            BorderThickness="0"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                            IsEnabled="False"
                                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="THỜI GIAN"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                        x:Name="Ngay"
                                        HorizontalAlignment="Left"
                                        FontFamily="{StaticResource Custom}"
                                        BorderThickness="0"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                        IsEnabled="False"
                                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                </Border>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="MÃ PHIẾU NHẬP"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox IsEnabled="False"
                                    x:Name="MaPN"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <Border
                        Margin="18,0,20,0"
                        Background="White"
                        CornerRadius="15"
                        >
                        <StackPanel
                            Margin="10"
                            >
                            <TextBlock
                                Margin="0,10,0,5"
                                Text="CHI TIẾT PHIẾU NHẬP"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                                />
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="TÊN SP | SIZE | TỒN KHO"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <ComboBox
                                        Margin="4,0,0,0"
                                        x:Name="SP"
                                        FontFamily="{StaticResource Custom}"
                                        BorderThickness="0"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        ItemsSource="{Binding LSP}"
                                        >
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding TENSP}"/>
                                                    <TextBlock
                                                        Text="|"
                                                        Margin="4,0,4,0"
                                                        />
                                                    <TextBlock 
                                                        Text="{Binding SIZE}"/>
                                                    <TextBlock
                                                        Text="|"
                                                        Margin="4,0,4,0"
                                                        />
                                                    <TextBlock 
                                                        Text="{Binding SL}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding Choose}"
                                                       CommandParameter="{Binding ElementName=AddImportwd}"></i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                                    Width="75"
                                    >
                                    <TextBlock
                                    Margin="5,0,0,0"
                                    Text="SỐ LƯỢNG"
                                    FontFamily="{StaticResource Custom}"
                                    />
                                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                        <TextBox
                                            x:Name="SL"
                                            HorizontalAlignment="Left"
                                            FontFamily="{StaticResource Custom}"
                                            BorderThickness="0"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0" Width="73"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel
                                    Width="210"
                                    >
                                    <TextBlock
                                        Margin="20,0,0,0"
                                        Text="ĐƠN GIÁ"
                                        FontFamily="{StaticResource Custom}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    />
                                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10"
                                            Margin="20,0,0,0">
                                        <TextBox
                                            x:Name="DG" IsEnabled="False"
                                            HorizontalAlignment="Left"
                                            FontFamily="{StaticResource Custom}"
                                            BorderThickness="0"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel
                                Width="270"
                                Margin="0,18"
                                Height="40"
                                Orientation="Horizontal"
                                >
                                <Button
                                    Margin="2,0,0,0"
                                        BorderThickness="0"
                                        Content="THÊM"
                                        FontSize="12"
                                        x:Name="addbtn"
                                        FontFamily="{StaticResource Custom}"
                                        materialDesign:ButtonAssist.CornerRadius="10"
                                >
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0,0.5">
                                            <GradientStop Color="#FFE5D8" Offset="0"/>
                                            <GradientStop Color="#FFCAD4" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction     
                                                            Command="{Binding AddSP}"
                                                            CommandParameter="{Binding ElementName=AddImportwd}"></i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <Button    
                                    BorderThickness="0"
                                    Margin="15,0,0,0"
                                    Content="XÓA"
                                    FontSize="12"
                                    x:Name="deletebtn"
                                    FontFamily="{StaticResource Custom}"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                >
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0,0.5">
                                            <GradientStop Color="#FFE5D8" Offset="0"/>
                                            <GradientStop Color="#FFCAD4" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction     
                                                            Command="{Binding DeleteSP}"
                                                            CommandParameter="{Binding ElementName=AddImportwd}"></i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <Button                            
                                    BorderThickness="0"
                                    Margin="15,0,0,0"
                                    Content="XÁC NHẬN"
                                    FontSize="12"
                                    FontFamily="{StaticResource Custom}"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    x:Name="ttbtn"
                                >
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0,0.5">
                                            <GradientStop Color="#FFE5D8" Offset="0"/>
                                            <GradientStop Color="#FFCAD4" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction     
                                                            Command="{Binding SavePN}"
                                                            CommandParameter="{Binding ElementName=AddImportwd}"></i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Row="3">
                <StackPanel>
                    <Border
                        Margin="-12,10,0,0"
                        Width="650"
                        Height="40"
                        CornerRadius="10"
                        Background="White"
                        >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBlock
                                    Text="MÃ SP"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource Custom}"
                                    FontSize="12"
                                />
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBlock
                                    Margin="32,10,0,0"
                                    HorizontalAlignment="Left"
                                    Text="TÊN SP"
                                    VerticalAlignment="Top"
                                    FontFamily="{StaticResource Custom}"
                                    FontSize="12"
                                />
                            </Grid>
                            <Grid Grid.Column="2">
                                <TextBlock
                                    Text="SIZE"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource Custom}"
                                    FontSize="12"
                                />
                            </Grid>
                            <Grid Grid.Column="3">
                                <TextBlock
                                    Text="SL"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    MaxWidth="150"
                                    FontFamily="{StaticResource Custom}"
                                    FontSize="12" Margin="45,10,0,0"
                                />
                            </Grid>
                            <Grid Grid.Column="4">
                                <TextBlock
                                    Text="THÀNH TIỀN"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    MaxWidth="150"
                                    FontFamily="{StaticResource Custom}"
                                    FontSize="12"
                                />
                            </Grid>
                        </Grid>
                    </Border>
                    <ListView x:Name="ListViewSP" 
                          SelectionMode="Single"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden" Height="220" Width="680"
                        >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    
                                    Width="650"
                                    Height="40"
                                    CornerRadius="10"
                                    Background="White"
                        >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <TextBlock
                                Text="{Binding MaSp}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                FontSize="12"
                                />
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <TextBlock
                                                Margin="2,0,0,0"
                                                HorizontalAlignment="Left"
                                                Text="{Binding TenSP}"
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource Custom}"
                                                FontSize="12"
                                            />
                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <TextBlock
                                                Text="{Binding Size}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource Custom}"
                                                FontSize="12"
                                            />
                                        </Grid>
                                        <Grid Grid.Column="3">
                                            <TextBlock
                                                Text="{Binding SL}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                MaxWidth="100"
                                                FontFamily="{StaticResource Custom}"
                                                FontSize="12"
                                            />
                                        </Grid>
                                        <Grid Grid.Column="4">
                                            <TextBlock
                                                Text="{Binding Tiennhap, StringFormat={}{0:# ###} VNĐ}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                MaxWidth="150"
                                                FontFamily="{StaticResource Custom}"
                                                FontSize="12"
                                            />
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="4"
                        Margin="0,4,0,0"
                  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"
                      HorizontalAlignment="Right"
                      >
                    <TextBlock
                        Foreground="#6C63FF"
                        Text="TỔNG TIỀN: "
                        FontFamily="{StaticResource Custom}"
                        FontSize="16"
                        VerticalAlignment="Center"
                        />
                </Grid>
                <Grid Grid.Column="1">
                    <TextBlock
                        Foreground="#6C63FF"
                        x:Name="TT"
                        FontFamily="{StaticResource Custom}"
                        FontSize="16"
                        VerticalAlignment="Center"
                        />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Page>
