<Page x:Class="Demo.View.DetailCustomerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo.View"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="350"
      x:Name="DetailCswd"
      DataContext="{StaticResource DetailCsVM}"
      >
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding GetMAKH}"
                                       CommandParameter="{Binding ElementName=DetailCswd}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border
        CornerRadius="15"
        Background="Transparent"
        >                
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="Transparent">
                    <StackPanel 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                >
                       
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Vertical"
                                Margin="15,0,0,0"
                                >
                        <TextBlock
                            Margin="-15,0,0,10"
                            HorizontalAlignment="Center"
                            Text="THÔNG TIN KHÁCH HÀNG"
                            FontSize="24"
                            Foreground="#6C63FF"
                            FontFamily="{StaticResource Custom}"
                            />
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="MÃ KHÁCH HÀNG"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                    x:Name="MaKH"
                                    HorizontalAlignment="Left"
                                    Width="150"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                        Margin="10,0,0,0"
                                        >
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="HỌ TÊN"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <TextBox
                                    x:Name="TenKH"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Left"
                                    Width="150"
                                    BorderThickness="2"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="THÊM HỌ TÊN"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,10,0,0"
                                    >
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="SỐ ĐIỆN THOẠI"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <TextBox
                                    x:Name="SDT"
                                    HorizontalAlignment="Left"
                                    Width="150"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="2"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="THÊM SDT"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                />
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                        Margin="15,0,0,0"
                                        >
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="GIỚI TÍNH"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <ComboBox
                                    x:Name="GT"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Left"
                                    Width="150"
                                    BorderThickness="2"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="THÊM GIỚI TÍNH"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                >
                                    <ComboBoxItem Content="Nam"/>
                                    <ComboBoxItem Content="Nữ"/>
                                    <ComboBoxItem Content="Khác"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,10,0,0"
                                    >
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="DOANH SỐ"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                    x:Name="DS"
                                    HorizontalAlignment="Left"
                                    Width="150"
                                    BorderThickness="0"
                                    FontFamily="{StaticResource Custom}"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                        Margin="10,0,0,0"
                                        >
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="HẠNG"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                    x:Name="Rank"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Left"
                                    Width="150"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock
                                    Margin="8,10,0,0"
                                    Text="ĐỊA CHỈ"
                                    FontFamily="{StaticResource Custom}"
                                />
                        <TextBox
                                    x:Name="DC"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Left"
                                    Width="319"
                                    Height="110"
                                    BorderThickness="2"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="THÊM ĐỊA CHỈ"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                    HorizontalScrollBarVisibility="Auto"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                />
                        <Button Content="CẬP NHẬT"
                                Margin="0,30,0,0"
                                Width="230"
                                BorderThickness="0"
                                x:Name="btnupdate"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                Background="#6C63FF"
                                >                            
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding Update}"
                                                       CommandParameter="{Binding ElementName=DetailCswd}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Page>
